# ファイル名: site/.env.example

# ==== Event schedule (client) ====
NEXT_PUBLIC_EVENT_DAY1=2025-09-20
NEXT_PUBLIC_EVENT_DAY2=2025-09-21

# Day 1: 09:30 - 14:30 (15 min)
NEXT_PUBLIC_DAY1_START=09:30
NEXT_PUBLIC_DAY1_END=14:30

# Day 2: 10:00 - 14:00 (15 min)
NEXT_PUBLIC_DAY2_START=10:00
NEXT_PUBLIC_DAY2_END=14:00

# Interval minutes
NEXT_PUBLIC_INTERVAL_MINUTES=15

# Capacity (client)
NEXT_PUBLIC_MAX_GROUP_SIZE=8

# ==== Server side ====
MAX_GROUP_SIZE=8

# Token secret (required in production)
SESSION_SECRET=replace-with-strong-secret

# Public app URL (for QR code). Example: https://example.com
NEXT_PUBLIC_APP_URL=